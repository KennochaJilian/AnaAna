@page
@model RegisterModel

@section Styles {
<link rel="stylesheet" asp-append-version="true" href="~/css/account.css" />
}

@{
    ViewData["Title"] = "S'inscrire";
}

<h1>@ViewData["Title"]</h1>
<section class=" ana-ana-styled-container account-container">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column justify-content-between account-form">
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="btn-container">
            <button type="submit" class="btn btn-primary ana-btn-form">S'inscrire</button>
        </div>
    </form>
    <div class="grass"> </div>
</section>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
