@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}
@section Styles {
<link rel="stylesheet" asp-append-version="true" href="~/css/account.css" />
}

<h1>@ViewData["Title"]</h1>
<section class="ana-ana-styled-container account-container login-container">
    <form id="account" method="post" class="d-flex flex-column justify-content-between account-form">
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>
        <div class="btn-container">
            <div class="form-group">
                <button type="submit" class="btn btn-primary ana-btn-form">Se connecter</button>
            </div>
        </div>
    </form>
    <div class="grass"> </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
